<%= content_tag_for(:tr, post) do %>
  <td></a><%= link_to raw("<i class='icon-pencil'></i>"), edit_post_path(post)%></td>
  <td>
    <%= link_to post.title, post_path(post) %><br />
    <%= post.body %>
  </td>
  <td><%= link_to (raw"<i class='icon-remove'></i>"), post, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
<% end %>
