<%= content_tag_for(:tr, post) do %>
  <td><%= link_to 'Edit', edit_post_path(post) %></td>
  <td>
    <%= link_to post.title, post_path(post) %><br />
    <%= post.body %>
  </td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
<% end %>
