<h1>Listing posts</h1>

<table>
  <tr>
    <th>edit</th>
    <th>Title</th>
    <th>destroy</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <tr>
      <td>
        <%= link_to post.title %><br />
        <%= post.body %>
      </td>
    </tr>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

